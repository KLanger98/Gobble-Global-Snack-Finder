<div class="w-screen flex flex-col items-center">
    <div class="w-4/5 shadow-xl bg-stone-100 flex flex-row p-8 justify-evenly rounded-lg mt-8 items-center">
        <div class="w-2/5 h-4/5 flex justify-center items-center">
            <img src={{snack_image}} class="ml-10" style=" max-height: 100%; max-width: 100%; width: auto; height: auto;">
        </div>
        <div class="border-stone-400 border-4" style="height: 500px;"></div>
        <div class="text-slate-950 flex flex-col">
            <h1 data-snackId={{snack_id}} class="text-3xl font-bold" id="snackName">{{snack_name}}</h1>
            <div class="border-stone-400 border-4 w-4/5"></div>
            <div>
                <h2 class="text-lg font-bold">Brand Name: {{snack_brand}}</h2>
            </div>
            <div>
                <h2 class="text-lg font-bold">Categories</h2>
                {{#each snack_categories as |individualCategory|}}
                    <p class="flex flex-row items-center">{{individualCategory.category.category_name}}</p>
                {{/each}}
            </div>
            <div>
                <h2 class="text-lg font-bold">Countries:</h2>
                {{#each snack_countries as |individualCountry|}}
                    <p>{{individualCountry.country.country_name}} <span class="text-3xl ml-4">{{individualCountry.country.country_emoji}}</span></p>
                {{/each}}
            </div>

            <h2 class="text-xl font-bold mt-12">Overall Rating:</h2>
            <div class="flex items-center mt-8">
                {{#each overallStarArr as |star|}}
                <svg class="w-4 h-4 {{star.color}}" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor"
                    viewBox="0 0 22 20">
                    <path
                        d="M20.924 7.625a1.523 1.523 0 0 0-1.238-1.044l-5.051-.734-2.259-4.577a1.534 1.534 0 0 0-2.752 0L7.365 5.847l-5.051.734A1.535 1.535 0 0 0 1.463 9.2l3.656 3.563-.863 5.031a1.532 1.532 0 0 0 2.226 1.616L11 17.033l4.518 2.375a1.534 1.534 0 0 0 2.226-1.617l-.863-5.03L20.537 9.2a1.523 1.523 0 0 0 .387-1.575Z" />
                </svg>
                {{/each}}
                
                <p class="ms-1 text-sm font-medium text-gray-500 dark:text-gray-400">{{ratings_average}}</p>
                <p class="ms-1 text-sm font-medium text-gray-500 dark:text-gray-400">out of</p>
                <p class="ms-1 text-sm font-medium text-gray-500 dark:text-gray-400">5</p>
            </div>
            <p class="ms-1 text-sm font-medium text-gray-500 dark:text-gray-400">Based on {{numReviews}} reviews</p>
            <div class="mt-12">
                <div class="flex flex-row items-center" >
                    {{!-- <div class="m-8 flex flex-col items-center">
                        <i class="fa-solid fa-cookie-bite fa-2xl mb-4"></i>
                        <p>Eaten</p>
                    </div> --}}
                    <div id={{#if userLike}}"removeLike"{{else}}"likeBtn"{{/if}} class="m-8 flex flex-col items-center">
                        {{#if userLike}}
                            <i class="fa-solid fa-heart fa-2xl mb-4 text-red-500"></i>
                        {{else}}
                            <i class="fa-solid fa-heart-circle-plus fa-2xl mb-4"></i>
                        {{/if}}
                        <p>Like</p>
                        <p>{{numLikes}}</p>
                    </div>
                    <div id={{#if userSaved}}"wishlistRemove"{{else}}"wishlistBtn"{{/if}} class="m-8 flex flex-col items-center">
                        {{#if userSaved}}
                            <i class="fa-solid fa-clock-rotate-left fa-2xl mb-4 text-green-600"></i>
                        {{else}}
                            <i class="fa-solid fa-clock-rotate-left fa-2xl mb-4"></i>
                        {{/if}}
                        <p>Wishlist</p>
                        <p>{{numWish}}</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {{!-- If logged In --}}
    <div class="w-4/5 shadow-xl bg-stone-100 flex flex-col p-8 justify-evenly rounded-lg mt-8 text-slate-950">
        <h1 class="text-2xl font-bold">Tried this Snack?</h1>
        <div class="flex items-center  mb-5">
            <svg id="star_one" class="w-6 h-6 ms-2 text-yellow-300" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor"
                viewBox="0 0 22 20">
                <path
                    d="M20.924 7.625a1.523 1.523 0 0 0-1.238-1.044l-5.051-.734-2.259-4.577a1.534 1.534 0 0 0-2.752 0L7.365 5.847l-5.051.734A1.535 1.535 0 0 0 1.463 9.2l3.656 3.563-.863 5.031a1.532 1.532 0 0 0 2.226 1.616L11 17.033l4.518 2.375a1.534 1.534 0 0 0 2.226-1.617l-.863-5.03L20.537 9.2a1.523 1.523 0 0 0 .387-1.575Z" />
            </svg>
            <svg id="star_two" class="w-6 h-6 ms-2 text-gray-300" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor"
                viewBox="0 0 22 20">
                <path
                    d="M20.924 7.625a1.523 1.523 0 0 0-1.238-1.044l-5.051-.734-2.259-4.577a1.534 1.534 0 0 0-2.752 0L7.365 5.847l-5.051.734A1.535 1.535 0 0 0 1.463 9.2l3.656 3.563-.863 5.031a1.532 1.532 0 0 0 2.226 1.616L11 17.033l4.518 2.375a1.534 1.534 0 0 0 2.226-1.617l-.863-5.03L20.537 9.2a1.523 1.523 0 0 0 .387-1.575Z" />
            </svg>
            <svg id="star_three" class="w-6 h-6 ms-2 text-gray-300" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor"
                viewBox="0 0 22 20">
                <path
                    d="M20.924 7.625a1.523 1.523 0 0 0-1.238-1.044l-5.051-.734-2.259-4.577a1.534 1.534 0 0 0-2.752 0L7.365 5.847l-5.051.734A1.535 1.535 0 0 0 1.463 9.2l3.656 3.563-.863 5.031a1.532 1.532 0 0 0 2.226 1.616L11 17.033l4.518 2.375a1.534 1.534 0 0 0 2.226-1.617l-.863-5.03L20.537 9.2a1.523 1.523 0 0 0 .387-1.575Z" />
            </svg>
            <svg id="star_four" class="w-6 h-6 ms-2 text-gray-300" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor"
                viewBox="0 0 22 20">
                <path
                    d="M20.924 7.625a1.523 1.523 0 0 0-1.238-1.044l-5.051-.734-2.259-4.577a1.534 1.534 0 0 0-2.752 0L7.365 5.847l-5.051.734A1.535 1.535 0 0 0 1.463 9.2l3.656 3.563-.863 5.031a1.532 1.532 0 0 0 2.226 1.616L11 17.033l4.518 2.375a1.534 1.534 0 0 0 2.226-1.617l-.863-5.03L20.537 9.2a1.523 1.523 0 0 0 .387-1.575Z" />
            </svg>
            <svg id="star_five" class="w-6 h-6 ms-2 text-gray-300 dark:text-gray-500" aria-hidden="true" xmlns="http://www.w3.org/2000/svg"
                fill="currentColor" viewBox="0 0 22 20">
                <path
                    d="M20.924 7.625a1.523 1.523 0 0 0-1.238-1.044l-5.051-.734-2.259-4.577a1.534 1.534 0 0 0-2.752 0L7.365 5.847l-5.051.734A1.535 1.535 0 0 0 1.463 9.2l3.656 3.563-.863 5.031a1.532 1.532 0 0 0 2.226 1.616L11 17.033l4.518 2.375a1.534 1.534 0 0 0 2.226-1.617l-.863-5.03L20.537 9.2a1.523 1.523 0 0 0 .387-1.575Z" />
            </svg>
        </div>
        <h3 class="text-1xl font-bold">Leave a Review:</h3>
        <div>
            <label for="reviewTitleInput" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Review Title</label>
            <input id="reviewTitleInput" type="text" 
                class="block w-full p-2 text-gray-900 border border-gray-300 rounded-lg bg-gray-50 text-xs focus:ring-blue-500 focus:border-blue-500">
        </div>
        <label for="reviewTextInput" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Your review:</label>
        <textarea id="reviewTextInput" rows="4"
            class="block p-2.5 w-full text-sm text-gray-900 bg-gray-50 rounded-lg border border-gray-300 focus:ring-blue-500 focus:border-blue-500"
            placeholder="Write your thoughts here..."></textarea>
        <button type="button" id="submitReview"
            class="text-white bg-gradient-to-r from-blue-500 via-blue-600 to-blue-700 hover:bg-gradient-to-br focus:ring-4 focus:outline-none focus:ring-blue-300  font-medium rounded-lg text-sm px-5 py-2.5 text-center me-2 mb- mt-4">Button</button>
    </div>
    <div class="w-4/5 shadow-xl bg-stone-100 flex flex-col p-8 justify-evenly rounded-lg mt-8 text-slate-950">
        <h1 class="text-2xl font-bold mb-8">Reviews:</h1>
        {{#each ratings as |rating|}}
            {{> review-details}}
        {{/each}}
        
    </div>
</div>

<script src="/js/addRating.js"></script>